<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.akashpratapsingh.attendance.MainActivity"
    android:background="@drawable/image"
    android:orientation="vertical"
    android:padding="0dp">


    <TextView
        android:text="Attendance Manager"
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:id="@+id/textView"
        android:background="#00ff33"
        android:textSize="36sp"
        android:textColor="#000000"
        android:paddingTop="15dp"
        android:textStyle="normal|bold"
        android:textAlignment="center" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingRight="0dp"
        android:paddingLeft="16dp"
        android:paddingTop="40dp">

        <ImageButton
            android:layout_height="195dp"
            app:srcCompat="@drawable/mark"
            android:id="@+id/input"
            android:layout_row="0"
            android:layout_column="0"
            android:paddingTop="0dp"
            android:background="@android:color/transparent"
            android:layout_width="171dp" />

        <ImageButton
            android:layout_width="180dp"
            android:layout_height="178dp"
            app:srcCompat="@drawable/book"
            android:id="@+id/subjectwize"
            android:layout_row="1"
            android:layout_column="0"
            android:paddingTop="0dp"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            android:layout_marginTop="5dp" />

        <ImageButton
            android:layout_width="171dp"
            android:layout_height="195dp"
            app:srcCompat="@drawable/dfghkl"
            android:id="@+id/preset"
            android:layout_row="0"
            android:layout_column="1"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            android:layout_marginTop="5dp" />

        <ImageButton
            android:layout_width="163dp"
            android:layout_height="182dp"
            app:srcCompat="@drawable/date"
            android:id="@+id/datewize"
            android:paddingTop="0dp"
            android:background="@android:color/transparent"
            android:paddingLeft="0dp"
            android:layout_marginLeft="10dp"
            android:scaleType="fitXY"
            android:layout_row="1"
            android:layout_column="1" />
    </GridLayout>

</LinearLayout>
